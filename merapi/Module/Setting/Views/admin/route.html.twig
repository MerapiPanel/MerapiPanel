{% extends "@panel/base.html.twig" %}

{% block header_title %}<i class="fa-solid fa-route"></i> Route{% endblock %}

{% block content %}
<section class="p-3">
    <header class="mb-3">
        <h1 class="mb-0">Route Stack</h1>
        <p>Rekapan router dari sistem <i class="text-muted">Mungkin tidak lengkap</i></p>
    </header>
    <article>

        {% for stack in route_stack %}

        <h2 class="fs-4">{{ stack.name }}</h2>

        <ul class="mb-3">
            {% for route in stack.routes %}

            <li class="mb-2">
                {{ route.path | url | raw }}
                <br>
                <i class="fa-solid fa-turn-up fa-rotate-90"></i> <code class="ms-1">{{ route.controller | raw }}</code>
            </li>
            {% else %}

            <div class="text-muted fs-2">Tidak ada route</div>
            {% endfor %}
        </ul>

        {% endfor %}
    </article>
</section>
{% endblock %}