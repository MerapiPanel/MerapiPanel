{% macro render_menu(menu) %}

    {% for item in menu %}
    <li class="nav-item{{ item.active ? ' active' : '' }}">
        <a {% if item.link %}href="{{ item.link }}"{% endif %}>
            {{ item.icon | raw }} {{item.name}}
        </a>
        {% if item.childs %}
        <ul class="nav-menu">
            {{ _self.render_menu(item.childs) }}
        </ul>
        {% endif %}
        
    </li>
    {% endfor %}
{% endmacro %}

<nav class="sidebar" id="sidebar">
    <div class="sidebar-container">
        <button class="sidebar-close" onclick="closeNav()"></button>
        <div class="sidebar-header">
            <img width="110" height="65" src="{{ '@panel/assets/logo.svg?v=1' | assets }}" alt="">
        </div>
        
        <ul class="nav-menu">
            {{ _self.render_menu(api.Panel.listmenu) }}
        </ul>
    </div>
</nav>

<script>
    function openNav() {
        document.getElementById("sidebar").classList.add("open");
    }

    function closeNav() {
        document.getElementById("sidebar").classList.remove("open");
    }
</script>