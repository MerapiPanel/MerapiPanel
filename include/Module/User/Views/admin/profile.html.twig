{% extends "@panel/base.html.twig" %}

{% block header_title %}Profile{% endblock %}

{% block breadcrumb_item %}
<li class="breadcrumb-item"><a href="{{ '/' | access_path }}">Home</a></li>
<li class="breadcrumb-item"><a href="{{ '/users' | access_path }}">Users</a></li>
<li class="breadcrumb-item active" aria-current="page">Profile</li>
{% endblock %}

{% block subheader_outer %}{% endblock %}

{% block content %}
<div class="row">

    <div class="col-12">
        <div class="bg-dark text-white position-relative" style="min-height: 300px;">
            <div class="position-absolute top-50 start-50 translate-middle text-center mt-4">
                <img src="{{ user.avatar }}" alt="" class="rounded-circle" style="width: 100px; height: 100px;">
                <h1 class="mt-3 fs-2">{{ user.name }}</h1>
                <i>{{ user.role | ucfirst }} </i>
            </div>
        </div>
    </div>
    <div class="px-3 px-lg-5 pt-3">
        <h4 class="mt-3 fs-5">Sessions</h4>
        <ul class="list-group list-group-flush">
            {% for session in session_data %}
            <li class="list-group-item ">
                <i class="fa fa-map-marker"></i> {{ session.display_name }} - <i class="fa fa-clock"></i> {{ session.post_date | date('d M Y H:i:s') }}
            </li>
            {% endfor %}
        </ul>
    </div>
</div>

{% endblock %}