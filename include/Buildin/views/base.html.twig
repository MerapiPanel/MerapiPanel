<!DOCTYPE html>

<html lang="{% block lang %}en{% endblock %}">
{% block html %}

<head>
	{% block head %}

	{% block meta %}
	<meta charset="utf-8">
	<title>{% block meta_title %}Merapi panel{% endblock %}</title>
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<meta name="description" content="Merapi panel">
	<meta name="author" content="Merapi">
	<meta name="robots" content="noindex, nofollow">
	<meta name="googlebot" content="noindex, nofollow">
	<link rel="apple-touch-icon" sizes="180x180" href="{{ '/meta/apple-touch-icon.png' | assets }}">
	<link rel="icon" type="image/png" sizes="32x32" href="{{ '/meta/favicon-32x32.png' | assets }}">
	<link rel="icon" type="image/png" sizes="16x16" href="{{ '/meta/favicon-16x16.png' | assets }}">
	<link rel="manifest" href="{{ '/meta/site.webmanifest' | assets }}">
	<link rel="mask-icon" href="{{ '/meta/safari-pinned-tab.svg' | assets }}" color="#0079d4">
	<meta name="msapplication-TileColor" content="#da532c">
	<meta name="theme-color" content="#ffffff">
	{% endblock %}


	{% block stylesheet %}
	<link rel="stylesheet" href="{{ '/dist/main.css' | assets }}">
	<link rel="stylesheet" href="{{ '/vendor/fontawesome/css/all.min.css' | assets }}">
	{% endblock %}


	{% block head_javascript %}
	<script src="{{ '/dist/main.js' | assets }}"></script>
	{% endblock %}

	{% endblock %}
</head>


<body>
	{% block body %}
	<main>
		{% block content %}
		<div clas="text-center">
			<h1 class="text-6xl font-bold mb-4">This is the base template</h1>
			<p class="text-lg text-center">You need to replace this view by add
				<span class="font-bold">{{"{%"}} <span class="text-purple-300">block</span> <span
						class="text-blue-300">content</span> {{ "%}" }}</span> in you template
			</p>
		</div>
		{% endblock %}
	</main>


	{% block javascript %}
	<script src="{{ '/vendor/bootstrap/js/bootstrap.bundle.min.js' | assets }}"></script>
	{% endblock %}
	{% endblock %}
</body>

{% endblock %}

</html>