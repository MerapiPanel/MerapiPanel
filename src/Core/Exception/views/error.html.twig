{% block stylesheets %}
<style>
	.code-snippet {
		font-family: Menlo, Monaco, Consolas, 'Courier New', monospace;
		font-size: 10px;
		border-spacing: 0;
		background-color: #f5f5f5;
		border: 1px solid #e3e3e3;
		width: 100%;
		overflow: auto;
		word-break: keep-all;
		white-space: pre;


	}

	.code-snippet tr {
		position: relative;
	}

	.code-snippet tr td,
	.code-snippet tr th {
		word-break: keep-all;
		white-space: pre;
		padding: 2.5px 25px 2.5px 0px;
	}

	.code-snippet .line-number {
		position: sticky;
		left: -0.5px;
		text-align: right;
		padding: 0 10px;
		background-color: #f5f5f5;
	}

	.code-snippet .highlight .line-content {
		background-color: #ffff00;
		color: #ff0000;
	}

	.snippet-section {
		background-color: #ffffff;
		box-shadow: 0px 0px 4px 0px rgba(171, 171, 171, 0.5);
		border-radius: .8rem;
		overflow: hidden;
	}

	.snippet-section header {
		padding: 10px 18px;
		background-color: #fcd1d1;
		color: #4d1414;
		box-shadow: -1px 0 0 0 #ffffff, 1px 0 0 0 #ffffff;
		word-wrap: break-word;
		font-weight: bold;
	}

	.stack-trace {
		width: 100%;
	}

	.stack-trace .lines {
		position: relative;
		margin: 0.3rem 0;
		padding-bottom: 0;
		opacity: 0;
		transition: .8s;
	}

	.stack-trace .line-number {
		background-color: hsla(var(--bulet-hue), 100%, var(--bulet-saturation), 1);
		width: 30px;
		height: 30px;
		border-radius: 100px;
		position: absolute;
		top: 2.5px;
		display: flex;
		justify-content: center;
		align-items: center;
		color: white;
	}

	.stack-trace .lines:last-child {
		color: red;
	}

	.stack-trace .lines:not(:last-child) .line-number::after {
		--line-bg-color: hsla(var(--bulet-hue), 100%, var(--bulet-saturation), 1);
		content: "";
		background-color: rgb(141, 189, 255);
		background: linear-gradient(to bottom, var(--line-bg-from-color) 0%, var(--line-bg-to-color) 100%);
		position: absolute;
		top: 100%;
		left: 50%;
		transform: translateX(-50%);
		width: 2px;
		height: var(--line-height);
		z-index: -1;
	}

	.stack-trace .line-content {
		padding: 0px 0px 35px 50px;
	}
</style>
{% endblock %}


