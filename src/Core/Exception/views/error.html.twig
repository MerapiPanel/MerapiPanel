{% block content %}

<div class="w-full h-full max-w-[1400px] mx-auto">

	<div class="mb-5 pt-5 px-3">

		<h1 class="break-all text-2xl font-bold mb-5">
			<span class="text-red-500 inline-block transform rotate-[40deg]">
