{% extends "@admin::panel/base.html.twig" %}


{% block body %}

<body class="min-h-screen min-w-screen bg-slate-100 text-slate-700">


    {% include "@parts::panel/navigation.html.twig" %}

    <main class="transition-all duration-300 ms-0 lg:ms-[260px] max-w-[1440px] mx-auto px-4 py-4 pb-24">

        <div class="flex">
            <div>
                {% block header %}
                <header class="py-3 pb-4 ps-2">
                    <h1 class="font-bold text-3xl">{% block header_title %}File Manager{% endblock %}</h1>
                </header>
                {% endblock %}

                {% block subheader %}
                <div class="py-5 w-full flex flex-wrap lg:flex-nowrap">

                    {% block subheader_search %}
                    <div class="flex w-full mb-3 sm:mb-0 max-w-[430px]">
                        <input class="text-input" type="text" placeholder="Search">
                        <button
                            class="ms-2 bg-white rounded outline-none border shadow px-4 py-2 hover:bg-blue-500 hover:text-white">
                            <i class="fa-solid fa-magnifying-glass"></i>
                        </button>
                    </div>
                    {% endblock %}

                    {% block subheader_actions %}{% endblock %}

                </div>
                {% endblock %}

                {% block content %}

                <div class="grid grid-cols-7 gap-4">

                    {% for key, item in container.data %}
                    <a data-fm-key="{{ key }}" onclick="FileManager.ItemFocusHandle(this);"
                        class="cursor-pointer [&.active]:bg-blue-400 [&.active>div]:to-slate-500/80 [&.active>div]:text-white [&.active]:shadow-blue-500/40 bg-gray-200 rounded overflow-hidden shadow aspect-[3/4] flex items-top justify-center relative">

                        <img class="img-{{ item.icon.scale }}" src="{{ item.icon.src | assets }}" />

                        <div
                            class="absolute pt-5 bottom-0 w-full p-2 bg-gradient-to-b from-transparent from-0% to-slate-500/40 to-50% bg-opacity-20 text-sm">
                            {{ item.name }}
                        </div>
                    </a>
                    {% endfor %}
                </div>
            </div>
            {% endblock %}
            <div class="offcanvas-placement flex-item-sticky top-8"></div>
        </div>
      

    </main>



    {% block javascripts %}

    <script src="{{ '@filemanager/assets/dist/view.filemanager.bundle.js' | assets }}"></script>
    <script>
        FileManager.setContainer("{{ container | json_encode }}");
    </script>
    {% endblock %}

</body>

{% endblock %}