{% block stylesheets %}
<style>
	* {
		box-sizing: border-box;
	}

	body,
	html {
		background-color: #232323;
		color: #ffffff;
		padding: 0;
		margin: 0;
		font-family: 'Courier New', Courier, monospace;
	}

	.container {
		display: flex;
		justify-content: center;
		align-items: center;
		height: 100vh;
		width: 100%;
		flex-wrap: wrap;
		max-width: 1200px;
		max-height: 100vh;
		margin: 0 auto;
	}

	.container>* {
		place-self: flex-end;
	}

	nav {
		height: 55px;
		width: 100%;
	}

	.content {
		padding: 1rem;
		max-width: 600px;
		width: 100%;
	}

	nav {
		padding: 0 1rem;
		opacity: 0.25;
	}

</style>
{% endblock %}


