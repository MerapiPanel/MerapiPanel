{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Block schema",
    "description": "Represents a block information.",
    "type": "object",
    "properties": {
        "name": {
            "type": "string",
            "description": "The name of the block."
        },
        "attributes": {
            "type": "array",
            "description": "An array of attributes for the block.",
            "items": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string",
                        "description": "The name of the attribute."
                    },
                    "type": {
                        "description": "The type of the attribute.",
                        "oneOf": [
                            {
                                "type": "string"
                            },
                            {
                                "type": "number"
                            },
                            {
                                "type": "boolean"
                            },
                            {
                                "type": "array",
                                "items": {
                                    "type": "string"
                                }
                            },
                            {
                                "type": "object"
                            }
                        ]
                    },
                    "default": {
                        "description": "The default value of the attribute.",
                        "oneOf": [
                            {
                                "type": "string"
                            },
                            {
                                "type": "number"
                            },
                            {
                                "type": "boolean"
                            },
                            {
                                "type": "array",
                                "items": {
                                    "type": "string"
                                }
                            }
                        ]
                    }
                },
                "required": [
                    "name",
                    "type"
                ]
            }
        },
        "options": {
            "type": "object",
            "description": "Options for the block.",
            "properties": {
                "droppable": {
                    "type": "boolean",
                    "description": "Indicates whether the block is droppable or not."
                },
                "children": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "description": "An array of strings representing the types of children allowed for the block."
                }
            },
            "required": [
                "droppable",
                "children"
            ]
        }
    },
    "required": [
        "name",
        "attributes",
        "options"
    ]
}